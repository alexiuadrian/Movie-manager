<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table class="table">
  <thead class="table-dark">
    <tr class="text text-center">
      <th>Name</th>
      <th>Release year</th>
      <th>Genre</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr class="text text-center">
        <td><%= movie.name %></td>
        <td><%= movie.release_year %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.rating %></td>
        <td><%= link_to 'Show', movie%></td>
        <td><%= link_to 'Edit', edit_movie_path(movie)%></td>
        <td><%= button_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, class: "btn btn-dark"%>
