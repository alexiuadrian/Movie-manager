<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table class="table">
  <thead class="table-dark">
    <tr class="text text-center">
      <th>Name</th>
      <th>Release year</th>
      <th>Genre</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr class="text text-center">
        <td class="position-relative"><div class="position-absolute top-50 start-50 translate-middle"><%= movie.name %></div></td>
        <td class="position-relative"><div class="position-absolute top-50 start-50 translate-middle"><%= movie.release_year %></div></td>
        <td class="position-relative"><div class="position-absolute top-50 start-50 translate-middle"><%= movie.genre %></div></td>
        <td class="position-relative"><div class="position-absolute top-50 start-50 translate-middle"><%= movie.rating %></div></td>
        <td><%= link_to 'Show', movie, class: "btn btn-dark" %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, class: "btn btn-dark"%>
