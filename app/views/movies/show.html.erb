<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row align-items-start">
    <div class="col">
      <h1 class="text text-dark">
        <%= @movie.name %>
        <h4 class="text text-secondary"><%= @movie.release_year %></h4>
      </h1>
    </div>
    <div class="col">
      <h2 class="text-end">
          <span class="badge bg-warning border border-dark">
            <%= @movie.rating %>
          </span>
        </h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row align-items-start">
    <div class="col">
      <h3>
        <strong>Genre:</strong>
        <%= @movie.genre %>
      </h3>

      <p>
        <div class="border border-dark" style="padding: 10px">
          <%= @movie.description %>
        </div>
      </p>

      <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-warning" %>
      <%= link_to 'Back', movies_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>
